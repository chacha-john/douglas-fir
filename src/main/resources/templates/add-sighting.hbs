{{#partial "content"}}
    <h3 class="text-center">Hi, Ranger! Add a sighting here!</h3>
    <form action="/sightings/all/new" method="post">
        <label for="animalName" class="form-label">What is the animal name?</label><br>
        <select id="animalName" name="animalName" required><br>
            {{#each animals}}
                <option value="{{animalName}}">{{animalName}}</option>
            {{/each}}
        </select><br>
        <label for="endangered" class="form-label">Is this animal endangered?</label><br>
        <input type="checkbox" value="endangered" id="endangered"><br>
        <label for="location" class="form-label">What is the location where the sighting was made?</label><br>
        <input name="location" id="location" type="text" required><br>
        <label for="rangerName" class="form-label">Enter your name here: </label><br>
        <input name="rangerName" id="rangerName" type="text" required><br>
        <button type="submit">Add animal</button>
    </form>
{{/partial}}
{{> layout.hbs}}